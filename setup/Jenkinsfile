pipeline {
    agent any

    stages {
        stage('Create service account')
            steps {
                sh label: '', script: 'bash ./service-account.sh'
            }
        stage('Install glcoud sdk')
            steps {
                sh label: '', script: 'bash ./cloud-sdk.sh'
            }    
        stage('gcloud auth')
            steps {
                sh label: '', script: 'gcloud auth activate service account --key-file=~/jenkins-sa.json '
            }
    }
}
